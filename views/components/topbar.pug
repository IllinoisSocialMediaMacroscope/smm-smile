nav(class="navbar navbar-inverse navbar-fixed-top")
	div(class="container-fluid")
		div(class="navbar-header")
			button(type="button",class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar", aria-expanded="true", aria-controls="navbar")
				span(class="sr-only") Toggle navigation
				span(class="icon-bar")
				span(class="icon-bar")
				span(class="icon-bar")
				
		div(id="navbar",class="navbar-collapse collapse")
			if parent
				ul(class="nav navbar-nav navbar-left")
					li
						a(href=parent,style="font-size:14px;color:white;background-color:#ffb804;margin:10px 10px;border-radius:30px;padding:6px 20px;") 
							span(class="glyphicon glyphicon-home")
							| Return To Analytics
						

			ul(class="nav navbar-nav navbar-right")
				li
					a(href="/history" style="font-size:14px;color:white;background-color:#7fbb03;margin:10px 10px;border-radius:30px;padding:6px 20px;")
						span(class="glyphicon glyphicon-time")
						| History
				li 
					a(href="/query" style="font-size:14px;color:white;background-color:#428bca;margin:10px 10px;border-radius:30px;padding:6px 20px;")
						span(class="glyphicon glyphicon-search")
						| Social Media
					 
			form(class="navbar-form navbar-right")
				input(type="text",id="sitemap",class="form-control",placeholder="Search within the tool...",style="border-radius:30px;")
			
			script.
				$("#sitemap").on('keyup',function(e){
					if (e.keyCode == 13){
						$.ajax({
							type:'post',
							url:'/sitemap', 
							data: {"searchTerm": $("#sitemap").val()},				
							success:function(data){
								console.log(data);
							},
							error: function(jqXHR, exception){
									var msg = '';
									if (jqXHR.status === 0) {
										msg = 'Not connect.\n Verify Network.';
									} else if (jqXHR.status == 404) {
										msg = 'Requested page not found. [404]';
									} else if (jqXHR.status == 500) {
										msg = 'Internal Server Error [500].';
									} else if (exception === 'parsererror') {
										msg = 'Requested JSON parse failed.';
									} else if (exception === 'timeout') {
										msg = 'Time out error.';
									} else if (exception === 'abort') {
										msg = 'Ajax request aborted.';
									} else {
										msg = 'Uncaught Error.\n' + jqXHR.responseText;
									}
									$("#error").val(msg);
									$("#warning").modal('show');
									
								} 
							});
					}
				});