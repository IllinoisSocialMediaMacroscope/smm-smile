{
	"form-action": "/NLP/topic",
	"containers":[
		{"container-name":"",
		"container-label-name":"select corpus (.zip)",
		"inputs":[
					{"type":"select",
						"name":"selectZip",
						"id":"selectZip",
						"class":"form-control",
						"optgroup": true
					}
				]},
		{"container-name":"",
		"container-label-name":"vectorize",
		"inputs":[
					{"type":"select",
						"name":"vectorizer",
						"id":"vectorizer",
						"class":"form-control",
						"optgroup": false,
						"options":[
							{"value":"TFIDF",
							"label":"Term Frequency Inverse Document Frequency"},
							
							{"value":"TF",
							"label":"Term Frequency"}
						]
					}
				]},
		{"container-name":"",
		"container-label-name":"Select Feature Number",
		"inputs":[
					{"type":"range",
						"min":"10",
						"max":"1000",
						"value":"100",
						"name":"n_features",
						"onchange":"rangeFeature.value=value",
						"id":"n_features",
						"output_id":"rangeFeature"
					}
				]},
		{"container-name":"",
		"container-label-name":"Topic Number",
		"inputs":[
					{"type":"range",
						"min":"2",
						"max":"50",
						"value":"10",
						"name":"n_topics",
						"onchange":"rangeTopic.value=value",
						"id":"n_topics",
						"output_id":"rangeTopic"
					}
				]}
	],
	"custom-script":"../bootstrap/js/customized/view_topic.js"
}
			