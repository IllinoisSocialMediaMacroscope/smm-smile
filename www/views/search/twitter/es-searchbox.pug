<!-- elastic search -->
div(class="es-tweet")
	div(class="form-group")
		<label class="label-control warning">maximum number of tweets
			<span class="warningText">Careful! Each 1000 is a http request</span></label>
		div(class="range range-node")
			input(type="range" min="1000" max="100000" value="5000" step="1000" id="perPage" onchange="perPage_rangeNode.value=value")
			<output id="perPage_rangeNode">5000</output>
	
	<!-- date -->
	div(class="form-group")
		<label class="label-control"><span class="glyphicon glyphicon-calendar" style="margin-right:5px;"></span>Filter based on DATE
			<input type="checkbox" id="es-dateRange" value="es-dateRange">
		</label>
	div(class="form-group es-dateRange")
		<label class="control-label col-sm-2"> start date</label>
		<div class="col-sm-10">
			input(class="form-control",type="date",id="start")
		</div>
		<label class="control-label col-sm-2"> end date</label>
		<div class="col-sm-10">
			input(class="form-control",type="date",id="end")
		</div>
	<!-- geocode -->
	div(class="form-group")
		<label class=""><span class="glyphicon glyphicon-globe" style="margin-right:5px;"></span>Filter based on GEOLOCATION
			<input type="checkbox" id="es-geocode" value="es-geocode">
		</label>
	div(class="form-group es-geocode")
		div(class="col-md-5" style="display:inline-block;")
			label Latitude
			input(class="form-control",type="number",step="0.0001",id="es-lat")
								
		div(class="col-md-5" style="display:inline-block;")
			label Longitude
			input(class="form-control",type="number",step="0.0001",id="es-lon")
								
		div(class="col-md-2" style="display:inline-block;")
			label radius(mile)
			input(class="form-control",type="number",step="0.01",id="es-radius")
									
		div(class="col-md-12")
			iframe(id="openLayerMap" src="openLayerMap/geolocation.html")
	<!-- popularity -->
	div(class="form-group")
		<label class=""><span class="glyphicon glyphicon-fire" style="margin-right:5px;"></span>Filter based on POPULARITY
			<input type="checkbox" id="es-popularity" value="geocode">
		</label>
	div(class="form-group es-popularity")
		<label class="label-control">author has followers larger than #</label>
		div(class="range range-node")
			input(type="range" min="10000" max="10000000" value="10000" step="1" id="followers_count" onchange="fc_rangeNode.value=value")
			<output id="fc_rangeNode">10000</output>
		<label class="label-control">author has statuses count larger than #</label>
		div(class="range range-node")
			input(type="range" min="100" max="10000" value="100" step="1" id="statuses_count" onchange="sc_rangeNode.value=value")
			<output id="sc_rangeNode">100</output>
	<!-- stream fields -->
	div(class="form-group")
		<label class="label-control">Select Fields</label>
		br
		select(multiple,id="twtStreamFields",class="fields")
			optgroup(label="ElasticSearchMetadata")
				option(value="_id" selected) _id
				option(value="_type" selected) _type
				option(value="_index" selected) _index 
				option(value="_score" selected) _score 
			optgroup(label="BasicFields")
				option(value="id" selected) id
				option(value="id_str" selected) id_str
				option(value="created_at" selected) created at
				option(value="text" selected) text
				option(value="retweet_count" selected) retweet count
				option(value="favorite_count" selected) favorite count
				option(value="retweeted" selected) retweeted
				option(value="favorited" selected) favorited
				option(value="possibly_sensitive" selected) possibly sensitive
				option(value="truncated" selected) truncated
				option(value="lang" selected) lang
				option(value="in_reply_to_user_id_str" selected) in reply to user id str
				option(value="in_reply_to_status_id_str" selected) in reply to status id str
				option(value="in_reply_to_screen_name" selected) in reply to screen name
				option(value="timestamp_ms" selected) timestamp ms
				option(value="mentions" selected) mentions
				option(value="hashtags" selected) hashtags
				option(value="urls" selected) urls
				option(value="is_quote_status" selected) is quote status
				option(value="emoticons" selected) emoticons
				option(value="source" selected) source
				option(value="sentiments" selected) sentiments
				option(value="filter_level" selected) filter level								
			optgroup(label="GeoLocation")
				option(value="lat" selected) latitude
				option(value="lon" selected) longitude
			optgroup(label="AuthorInformation")
				option(value="author_id" selected) author id
				option(value="author_id_str" selected) author id str
				option(value="name" selected) name
				option(value="screen_name" selected) screen name
				option(value="description" selected) description
				option(value="author_created_at" selected) author created_at
				option(value="profile_image_url" selected) profile image URL
				option(value="profile_banner_url" selected) profile banner URL
				option(value="url" selected) URL
				option(value="location" selected) location
				option(value="tweets_count" selected) tweets count
				option(value="followers_count" selected) followers count
				option(value="friends_count" selected) friends count
				option(value="listed_count" selected) listed count
				option(value="favourites_count" selected) favorites count
				option(value="statuses_count" selected) statuses count
				option(value="time_zone" selected) timezone
				option(value="protected" selected) protected
				option(value="verified" selected) verified
				option(value="is_translator" selected) is translator
				option(value="contributors_enabled" selected) contributors enabled
				option(value="geo_enabled" selected) geo enabled
				option(value="author_lang" selected) author language	
